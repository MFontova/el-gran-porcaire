---
interface Props {
  frontmatter: Record<string, any>
  url: string
}

const { frontmatter, url } = Astro.props
---

<a class="h-full flex flex-col" href={url}>
  <section class="border shadow-md border-bellpuig-black rounded-md px-3 py-1 flex flex-col h-52 justify-center">
    <!-- <h2 transition:name="title" transition:animate="slide" class="text-center">{frontmatter.title}</h2> -->
    <figure class="flex justify-center items-center h-full">
      <img transition:name={frontmatter.image.url} class="object-contain max-h-full max-w-full mix-blend-multiply" src={frontmatter.image.url} />
    </figure>
  </section>
</a>
